@using Web.Shop.Entities
@model NewsVM
@{
    ViewData["Title"] = "Список новин";
}
<h1>Список новин</h1>

<a class="btn btn-success" asp-action="Create">Додати новину</a>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.list)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>



        <nav>
            <ul class="pagination">

                <li class="page-item @(Model.currentPage == 1? "disabled":"")">
                    <a class="page-link" asp-action="Index" asp-controller="News" asp-route-page="@(Model.currentPage - 1)" tabindex="-1">Previous</a>
                </li>
                @for (int i = 1; i < Model.maxPage + 1; i++)
                {
                    <li class="page-item @(Model.currentPage == i ? "active": "" )">
                        <a class="page-link" asp-action="Index" asp-controller="News" asp-route-page="@i">@i <span class="sr-only">(current)</span></a>
                    </li>
                }
                <li class="page-item @(Model.currentPage == Model.maxPage? "disabled":"")">
                    <a class="page-link" asp-action="Index" asp-controller="News" asp-route-page="@(Model.currentPage+1)">Next</a>
                </li>
            </ul>
        </nav>

    </div>
</div>