@using Web.Shop.Entities
@model List<News>
@{
    ViewData["Title"] = "Список новин";
}
<h1>Список новин</h1>

<a class="btn btn-success" asp-action="Create">Додати новину</a>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>